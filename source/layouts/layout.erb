<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
    <header class="header">
      <div class="bound full-width clearfix">
        <div class="branding">
          <img src="http://projects.scpr.org/officer-involved/images/logo_kpcc-black.svg" alt="89.3 KPCC" class="desaturate">
          <hr class="pipe">
          <ul class="nav__links">
            <li>
              <a href="#">
                <img src="../images/listen-live.svg" /> 
                Listen Live 
                <span class="program-title">- Morning Edition</span>
              </a>
            </li>
          </ul>
        </div>
        <nav class="nav">
          <ul class="nav__links">
            <li><a href="#">News</a></li>
            <li><a href="#">Programs</a></li>
            <li><a href="#">Events</a></li>
            <li><a href="#">Support</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#"><img src="../images/search.svg" /></a></li>
          </ul>
          <hr class="pipe">
          <ul class="nav__links">
            <li><a href="#"><img src="../images/donate.svg" /> Donate</a></li>
            <li><a href="#"><img src="../images/user.svg" /> Sign In</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <aside class="ad first">
      <img src="http://placehold.it/728x91?text=Position+A" alt="Position A">
    </aside> 
    <section class="broadcast-bar">
      <%= tag :img, :src => "http://scpr.github.io/scpr-homepage-prototype/images/listen-live.svg" %>
      <h5>Listen Live</h5>
      <h6>- Morning Edition</h6>
    </section>
    <%= yield %>
    <footer class="footer">
      <% tag :img, :src => "http://scpr.github.io/scpr-homepage-prototype/images/cheese.svg" %>
    </footer>
  </body>
</html>
